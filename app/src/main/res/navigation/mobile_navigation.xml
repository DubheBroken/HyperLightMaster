<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_light">

    <fragment
        android:id="@+id/navigation_light"
        android:name="com.dubhe.hyperlightmaster.fragment.ChangeLightFragment"
        android:label="@string/tab_light"
        tools:layout="@layout/fragment_change_light" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.dubhe.hyperlightmaster.fragment.InfoFragment"
        android:label="@string/tab_info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.dubhe.hyperlightmaster.fragment.SettingsFragment"
        android:label="@string/tab_setting" />

</navigation>